<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.aii.mapper.RoleMapper">
    <select id="getAllByUsername" resultType="com.example.aii.entity.Role">
        select *
        from role r
                 join relation_user_role rur on r.id = rur.role_id
                 join user u on rur.user_id = u.id
        where u.username = #{username}
    </select>

    <select id="selectByUserId" resultType="com.example.aii.entity.Role">
        select r.*
        from user u
                 join role r on JSON_CONTAINS(u.role_ids, JSON_ARRAY(r.id))
        where u.id = #{userId}
    </select>

    <select id="selectById1" resultType="com.example.aii.entity.Role">
        select * from role where id = #{id}
    </select>
</mapper>